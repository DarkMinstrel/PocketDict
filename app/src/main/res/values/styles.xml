<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSurface">@android:color/white</item> <!-- chip background -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorHeart">@color/colorHeart</item>
        <item name="colorDark">@color/colorDark</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextHeadline">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
